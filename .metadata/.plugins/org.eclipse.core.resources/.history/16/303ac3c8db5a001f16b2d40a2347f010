//, tags= "@TC01 and @TC02"
)
public class Runner{
	
	public  WebDriver driver;

	@BeforeClass
	public static void setUp() {
		System.out.println("start");
		driver = new ChromeDriver();
	}

	@AfterClass
	public static void tearDown() {
		System.out.println("end");
		driver.close();
	}

}
